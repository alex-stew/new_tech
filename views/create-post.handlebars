<div class="card" id="create-post-card">
    <h3 class="card-header">create new post</h3>
    <form class="card-body new-post-form" id="create-post-form">
        <label for="post-title" class="form-label">title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />


        <label class="form-label" for="content">content</label>
        <textarea id="post-content" name="post-content" class="form-input"></textarea>

        <button type="submit" class="btn btn-outline-success me-2">add post</button>
    </form>
</div>

